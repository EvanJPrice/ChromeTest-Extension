{
  "manifest_version": 3,
  "name": "Beacon Blocker",
  "version": "1.0.0",
  "description": "AI-powered content blocker that helps you stay focused by blocking distracting websites based on your personal goals.",
  "icons": {
    "48": "logo.jpg",
    "128": "logo.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.onrender.com/*",
    "https://api.beaconblocker.com/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_title": "Beacon Blocker",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "config.js",
        "content-script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.vercel.app/*",
      "https://*.netlify.app/*",
      "https://dashboard.beaconblocker.com/*"
    ]
  }
}